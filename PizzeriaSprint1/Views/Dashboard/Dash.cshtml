
@{
    ViewBag.Title = "Dash";
    if (Session["username"] == null)
    {
        Response.Redirect("~/Employee/EmployeeM");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        h3 {
            text-align: center;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: larger;
            background-color: chartreuse;
            color: darkblue;
        }

        a {
            font-family: 'Times New Roman';
            font-weight: bolder;
            background-color: lightgreen;
            color: black;
        }
    </style>
</head>
<body>
    <div>
        <h1>Employee DashBoard</h1>
        <h3>Hello !<br /><br /> <b>@Session["emp_name"]</b> Hope You are Doing Well.</h3>
        <a style="text-align:right" href="@Url.Action("LogOut","Employee1")">LogOut</a>
        <br />
        <br />
        <a href="@Url.Action("PlaceOrder","Dashboard")">Place New Order</a>
        <br />
        <br />
        <a href="@Url.Action("OrderSummary","Order")">View/Edit Order Status</a>

    </div>
    @model IEnumerable<PizzeriaSprint1.Models.Customer>

   
        @using (Html.BeginForm("Dash", "Dashboard", FormMethod.Get))
        {
            @Html.TextBox("Searching") <input type="submit" value="Search" />
        }

        <table border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.CustomerId)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.PhoneNo)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.CustomerEmail)
                </th>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" style="color: red">
                        No matches found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CustomerId
                        </td>
                        <td>
                            @item.FirstName
                        </td>
                        <td>
                            @item.LastName
                        </td>
                        <td>
                            @item.PhoneNo
                        </td>
                        <td>
                            @item.Address
                        </td>
                        <td>
                            @item.City
                        </td>
                        <td>
                            @item.CustomerEmail
                        </td>
                    </tr>
                }
            }
        </table>

    </body>
</html>







